// ============================================================
// STATE
// ============================================================
let activeSection = Object.keys(sections)[0];
let activeMode = 'flash';
let currentIdx = 0;
let isFlipped = false;
let quizItems = [];
let quizIdx = 0;
let quizScore = 0;
let quizAnswered = false;

// ============================================================
// SECTION NAV
// ============================================================
function buildSectionNav() {
  const nav = document.getElementById('section-nav');
  const allSections = [...Object.keys(sections), 'Cocktails', 'Wine List'];
  nav.innerHTML = allSections.map(s =>
    `<button class="section-btn${s === activeSection ? ' active' : ''}" onclick="setSection('${s}')">${s}</button>`
  ).join('');
}

function setSection(s) {
  activeSection = s;
  currentIdx = 0;
  isFlipped = false;
  buildSectionNav();
  const isBev = s === 'Cocktails' || s === 'Wine List';
  document.getElementById('mode-tabs').style.display = isBev ? 'none' : 'flex';
  if (isBev) {
    setMode('list');
  } else {
    const dietModes = ['gf','veg','vegan'];
    setMode(dietModes.includes(activeMode) ? activeMode : (activeMode === 'list' ? 'list' : activeMode));
  }
}

// ============================================================
// MODE
// ============================================================

// Vegan: vegetarian AND no dairy AND no egg
const dairyTerms = ['dairy','milk','cheese','labneh','feta','cream','gruyere','mozzarella','parmesan','halloumi','butter','crÃ¨me','yogurt'];
const eggTerms = ['egg'];
const glutenTerms = ['gluten'];

function isDairyFree(d) {
  const check = [...d.allergens, ...d.ingredients].join(' ').toLowerCase();
  return !dairyTerms.some(t => check.includes(t));
}
function isEggFree(d) {
  const check = [...d.allergens, ...d.ingredients].join(' ').toLowerCase();
  return !eggTerms.some(t => check.includes(t));
}
function isGlutenFree(d) {
  const check = [...d.allergens, ...d.ingredients].join(' ').toLowerCase();
  return !glutenTerms.some(t => check.includes(t));
}
function isVegan(d) {
  return d.vegetarian && isDairyFree(d) && isEggFree(d);
}

function setMode(m) {
  activeMode = m;
  const modes = ['flash','quiz','list','gf','veg','vegan'];
  document.querySelectorAll('.mode-tab').forEach((t, i) => {
    t.classList.toggle('active', modes[i] === m);
  });
  document.getElementById('flash-view').style.display = m === 'flash' ? 'block' : 'none';
  document.getElementById('quiz-view').style.display = m === 'quiz' ? 'block' : 'none';
  document.getElementById('list-view').style.display = m === 'list' ? 'block' : 'none';
  document.getElementById('filter-view').style.display = ['gf','veg','vegan'].includes(m) ? 'block' : 'none';

  if (m === 'flash') renderFlash();
  if (m === 'quiz') initQuiz();
  if (m === 'list') renderList();
  if (m === 'gf') renderFilter('gf');
  if (m === 'veg') renderFilter('veg');
  if (m === 'vegan') renderFilter('vegan');
}

function renderFilter(type) {
  const config = {
    gf:    { label:'Gluten Free Items', emoji:'ðŸŒ¾', note:'Items with no gluten-containing allergens. Always inform your server of a gluten allergy â€” cross-contamination risk exists in this kitchen.', fn: d => isGlutenFree(d) },
    veg:   { label:'Vegetarian Options', emoji:'ðŸ¥—', note:'Items marked as vegetarian. Ingredients are listed as-is â€” no modifications assumed.', fn: d => d.vegetarian },
    vegan: { label:'Vegan Options', emoji:'ðŸŒ¿', note:'Items free from meat, dairy, and eggs based on listed ingredients. Always confirm with your server.', fn: d => isVegan(d) }
  };
  const { label, emoji, note, fn } = config[type];

  // Collect all dishes across all food sections
  const allDishes = Object.entries(sections).flatMap(([sec, items]) =>
    items.filter(fn).map(d => ({ ...d, section: sec }))
  );

  // Group by section
  const grouped = {};
  allDishes.forEach(d => {
    if (!grouped[d.section]) grouped[d.section] = [];
    grouped[d.section].push(d);
  });

  let html = `
    <div style="background:var(--navy);border-radius:6px;padding:20px 24px;margin-bottom:24px;">
      <div style="font-size:1.6rem;margin-bottom:6px;">${emoji}</div>
      <div style="font-family:'Playfair Display',serif;font-size:1.4rem;color:var(--gold);margin-bottom:8px;">${label}</div>
      <div style="font-size:0.72rem;color:rgba(255,255,255,0.5);line-height:1.6;">${note}</div>
      <div style="font-size:0.65rem;color:var(--gold);margin-top:12px;letter-spacing:0.1em;">${allDishes.length} items across ${Object.keys(grouped).length} sections</div>
    </div>
  `;

  if (allDishes.length === 0) {
    html += `<div style="text-align:center;padding:40px;color:var(--navy-muted);font-size:0.8rem;">No items found for this filter.</div>`;
  }

  for (const [sec, items] of Object.entries(grouped)) {
    html += `<div class="list-section-title" style="margin-top:20px;">${sec}</div>`;
    html += items.map(d => `
      <div class="list-item">
        <h3>${d.name}</h3>
        <div class="l-desc">${d.desc}</div>
        <div class="list-row">
          <div class="list-col">
            <div class="l-label">Ingredients</div>
            <div class="l-val">${d.ingredients.join(' Â· ')}</div>
          </div>
          <div class="list-col">
            <div class="l-label">Allergens</div>
            <div class="l-val l-allerg">${d.allergens.length ? d.allergens.join(', ') : 'None listed'}</div>
            <div class="l-label" style="margin-top:8px">Utensils</div>
            <div class="l-val">${d.utensils}</div>
          </div>
        </div>
      </div>
    `).join('');
  }

  document.getElementById('filter-view').innerHTML = html;
}

// ============================================================
// FLASH
// ============================================================
function renderFlash() {
  const items = sections[activeSection];
  if (!items) return;
  const d = items[currentIdx];
  const pct = ((currentIdx + 1) / items.length * 100).toFixed(0);

  document.getElementById('flash-view').innerHTML = `
    <div class="counter">${currentIdx + 1} / ${items.length}</div>
    <div class="progress-wrap"><div class="progress-fill" style="width:${pct}%"></div></div>
    <div class="card-scene" onclick="flipCard()">
      <div class="card${isFlipped ? ' flipped' : ''}" id="card">
        <div class="card-front">
          <div class="category-tag">${d.category}</div>
          <div class="dish-name">${d.name}</div>
          <div class="description">${d.desc}</div>
          <div class="prompt">tap to reveal ingredients & allergens</div>
        </div>
        <div class="card-back">
          <div class="sec-label">Ingredients</div>
          <div class="sec-val">${d.ingredients.join(' Â· ')}</div>
          <div class="sec-label">Allergens / Dietary</div>
          <div class="allergen-val">${d.allergens.join(', ')}</div>
          <div class="sec-label">Utensils</div>
          <div class="sec-val utensil">${d.utensils}</div>
          ${d.vegetarian ? '<span class="veg">âœ“ Vegetarian Option</span>' : ''}
          <div class="flip-hint">tap to flip back</div>
        </div>
      </div>
    </div>
    <div class="controls">
      <button class="btn" onclick="navigate(-1)">â† Prev</button>
      <button class="btn" onclick="flipCard()">Flip</button>
      <button class="btn" onclick="navigate(1)">Next â†’</button>
    </div>
  `;
}

function flipCard() {
  isFlipped = !isFlipped;
  const card = document.getElementById('card');
  if (card) card.classList.toggle('flipped', isFlipped);
}

function navigate(dir) {
  const items = sections[activeSection];
  currentIdx = (currentIdx + dir + items.length) % items.length;
  isFlipped = false;
  renderFlash();
}

// ============================================================
// QUIZ
// ============================================================
const quizTypes = [
  { label:"Name the Ingredients", fn: d => d.ingredients.join(', ') },
  { label:"Name the Allergens", fn: d => d.allergens.join(', ') },
  { label:"What are the serving utensils?", fn: d => d.utensils },
];

function initQuiz() {
  const items = sections[activeSection];
  quizItems = [];
  items.forEach((d, i) => {
    quizTypes.forEach(t => {
      const ans = t.fn(d);
      if (ans && ans !== 'n/a') quizItems.push({ d, i, type: t });
    });
  });
  quizItems = quizItems.sort(() => Math.random() - 0.5).slice(0, Math.min(10, quizItems.length));
  quizIdx = 0;
  quizScore = 0;
  quizAnswered = false;
  renderQuiz();
}

function renderQuiz() {
  const view = document.getElementById('quiz-view');
  if (quizIdx >= quizItems.length) { showScore(); return; }
  const q = quizItems[quizIdx];
  const correct = q.type.fn(q.d);
  const items = sections[activeSection];
  const wrongPool = items.filter((_, i) => i !== q.i).map(dd => q.type.fn(dd)).filter(v => v && v !== 'n/a');
  const opts = [correct, ...wrongPool.sort(() => Math.random() - 0.5).slice(0, 3)].sort(() => Math.random() - 0.5);
  const pct = ((quizIdx + 1) / quizItems.length * 100).toFixed(0);

  view.innerHTML = `
    <div class="counter">Question ${quizIdx + 1} / ${quizItems.length}</div>
    <div class="progress-wrap"><div class="progress-fill" style="width:${pct}%"></div></div>
    <div class="quiz-card">
      <div class="quiz-category">${q.d.category}</div>
      <div class="quiz-question">${q.d.name}</div>
      <div class="quiz-type">${q.type.label}</div>
      <div class="quiz-options" id="quiz-opts">
        ${opts.map(o => `<button class="quiz-opt" onclick="checkAnswer(this,'${CSS.escape(o)}','${CSS.escape(correct)}')">${o}</button>`).join('')}
      </div>
      <div class="quiz-result" id="qres"></div>
    </div>
    <div class="controls" id="quiz-ctrl" style="margin-top:20px;display:none">
      <button class="btn btn-primary" onclick="nextQ()">Next â†’</button>
    </div>
  `;
}

function checkAnswer(btn, selected, correct) {
  if (quizAnswered) return;
  quizAnswered = true;
  const sel = CSS.unescape(selected);
  const cor = CSS.unescape(correct);
  document.querySelectorAll('.quiz-opt').forEach(b => {
    b.disabled = true;
    if (b.textContent === cor) b.classList.add('correct');
    else if (b.textContent === sel && sel !== cor) b.classList.add('wrong');
  });
  const res = document.getElementById('qres');
  if (sel === cor) { res.textContent = 'âœ“ Correct'; res.className = 'quiz-result'; quizScore++; }
  else { res.textContent = 'âœ— Incorrect â€” correct: ' + cor.substring(0, 60) + (cor.length > 60 ? 'â€¦' : ''); res.className = 'quiz-result wrong'; }
  document.getElementById('quiz-ctrl').style.display = 'flex';
}

function nextQ() { quizIdx++; quizAnswered = false; renderQuiz(); }

function showScore() {
  const pct = Math.round(quizScore / quizItems.length * 100);
  document.getElementById('quiz-view').innerHTML = `
    <div class="score-wrap">
      <h2>${quizScore}/${quizItems.length}</h2>
      <p>${pct >= 80 ? 'Ready for service.' : pct >= 60 ? 'Getting there â€” keep drilling.' : 'Keep studying. You\'ve got this.'}</p>
      <button class="btn btn-primary" onclick="initQuiz()">Retry</button>
      <button class="btn" onclick="setMode('list')" style="margin-left:8px">Study All</button>
    </div>
  `;
}

// ============================================================
// LIST
// ============================================================
function renderList() {
  const view = document.getElementById('list-view');
  if (activeSection === 'Wine List') { renderWineList(view); return; }
  if (activeSection === 'Cocktails') { renderCocktails(view); return; }

  const items = sections[activeSection];
  view.innerHTML = `
    <div class="list-section-title">${activeSection}</div>
    ${items.map(d => `
      <div class="list-item">
        <h3>${d.name}</h3>
        <div class="l-desc">${d.desc}</div>
        <div class="list-row">
          <div class="list-col">
            <div class="l-label">Ingredients</div>
            <div class="l-val">${d.ingredients.join(' Â· ')}</div>
          </div>
          <div class="list-col">
            <div class="l-label">Allergens</div>
            <div class="l-val l-allerg">${d.allergens.join(', ')}</div>
            <div class="l-label" style="margin-top:10px">Utensils</div>
            <div class="l-val">${d.utensils}</div>
            <div class="${d.vegetarian ? 'l-veg-yes' : 'l-veg-no'}" style="margin-top:6px">${d.vegetarian ? 'âœ“ Vegetarian Option' : 'âœ— Not Vegetarian'}</div>
          </div>
        </div>
      </div>
    `).join('')}
  `;
}

function renderCocktails(view) {
  let html = '<div class="list-section-title">Cocktails & Drinks</div>';
  for (const [cat, items] of Object.entries(cocktails)) {
    html += `<div class="cocktail-section-label">${cat}</div><div class="cocktail-grid">`;
    html += items.map(c => `
      <div class="cocktail-card">
        <div class="cocktail-name">${c.name}</div>
        <div class="cocktail-ingredients">${c.ingredients}</div>
        ${c.price ? `<div class="cocktail-price">${c.price}</div>` : ''}
      </div>
    `).join('');
    html += '</div>';
  }
  view.innerHTML = html;
}

function renderWineList(view) {
  let html = '<div class="list-section-title">Wine List</div>';
  for (const [category, subs] of Object.entries(wines)) {
    html += `<div class="wine-category">${category}</div>`;
    for (const [sub, items] of Object.entries(subs)) {
      if (sub) html += `<div class="wine-subcategory">${sub}</div>`;
      html += items.map(w => `
        <div class="wine-item">
          <div>
            <span class="wine-name">${w.name}</span>
            <span class="wine-detail"> â€” ${w.detail}</span>
          </div>
          <div class="wine-price">${w.price}</div>
        </div>
      `).join('');
    }
  }
  view.innerHTML = html;
}

// ============================================================
// INIT
// ============================================================
buildSectionNav();
renderFlash();
</script>

</body>
</html>